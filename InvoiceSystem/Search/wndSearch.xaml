<Window x:Class="InvoiceSystem.Search.wndSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InvoiceSystem.Search"
      mc:Ignorable="d" 
			Width="800"
			Height="450"
      Title="wndSearch"
			ResizeMode="CanMinimize" Loaded="Window_Loaded">

		<Grid>
				<Grid.RowDefinitions>
						<RowDefinition Height="76*"/>
						<RowDefinition Height="309*"/>
						<RowDefinition Height="49*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
						<ColumnDefinition Width="11*"/>
						<ColumnDefinition Width="109*"/>
						<ColumnDefinition Width="80*"/>
				</Grid.ColumnDefinitions>
				<Label Content="Search All Invoices" HorizontalAlignment="Left" VerticalAlignment="Center" Height="56" Width="315" FontSize="36" Margin="10,0,0,0" Grid.Column="1"/>
				<DataGrid x:Name="dgInvoices" AutoGenerateColumns="False" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,76,0,0" Grid.RowSpan="2" CanUserAddRows="False">
						<DataGrid.Columns>
								<DataGridTextColumn Header="Invoice Number" Binding="{Binding Path=sInvoiceNum}"></DataGridTextColumn>
								<DataGridTextColumn Header="Invoice Date" Binding="{Binding Path=sInvoiceDate}"></DataGridTextColumn>
								<DataGridTextColumn Header="Total Cost" Binding="{Binding Path=sTotalCost}"></DataGridTextColumn>
						</DataGrid.Columns>
				</DataGrid>
				<ComboBox x:Name="cbInvoiceNumber" Grid.Column="2" HorizontalAlignment="Left" Margin="153,40,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="22" SelectionChanged="comboBox_Changed"/>
				<ComboBox x:Name="cbInvoiceDate" Grid.Column="2" HorizontalAlignment="Left" Margin="153,98,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="22" SelectionChanged="comboBox_Changed"/>
				<ComboBox x:Name="cbInvoiceCost" Grid.Column="2" HorizontalAlignment="Left" Margin="153,161,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="22" SelectionChanged="comboBox_Changed"/>
				<Label Grid.Column="2" Content="Invoice Number:" HorizontalAlignment="Left" Margin="31,38,0,0" Grid.Row="1" VerticalAlignment="Top" Width="101" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="26"/>
				<Label Grid.Column="2" Content="Invoice Date:" HorizontalAlignment="Left" Margin="48,96,0,0" Grid.Row="1" VerticalAlignment="Top" Width="84" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="26"/>
				<Label Grid.Column="2" Content="Invoice Cost:" HorizontalAlignment="Left" Margin="48,159,0,0" Grid.Row="1" VerticalAlignment="Top" Width="84" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="26"/>
				<Button x:Name="btnSelectInvoice" Grid.Column="2" Content="Select Invoice" HorizontalAlignment="Left" Margin="37,248,0,0" Grid.Row="1" VerticalAlignment="Top" Width="106" Height="24" Click="btnSelectInvoice_Click"/>
				<Button x:Name="btnClearFilter" Grid.Column="2" Content="Clear Filter" HorizontalAlignment="Left" Margin="167,248,0,0" Grid.Row="1" VerticalAlignment="Top" Width="106" Height="24" Click="btnClearFilter_Click"/>

		</Grid>
</Window>
